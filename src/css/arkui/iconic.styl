iconic-font(name='arkicons', path='/fonts/')
  @font-face
    // IE9 Compat modes: eot
    // IE6-IE8: #iefix
    // Safari, Android, iOS: ttf
    // Legacy iOS: svg
    font-family: 'arkicons'
    src: url(path + name + '.eot')
    src: url(path + name + '.eot?#iefix') format('embedded-opentype'),
      url(path + name + '.woff') format('woff'),
      url(path + name + '.ttf') format('truetype'),
      url(path + name + '.svg#arkicons') format('svg')
    font-weight: normal
    font-style: normal

  // You can use data attributes for inserting icons
  [data-icon]:before
    font-family: 'arkicons'
    content: attr(data-icon)
    speak: none
    font-weight: normal
    font-variant: normal
    text-transform: none
    line-height: 1
    -webkit-font-smoothing: antialiased
