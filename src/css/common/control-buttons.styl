@import 'arkui/mixins'
@import 'common/variable'
@import 'extends'

$sign-icon
  position: absolute
  font-size: 16px
  height: 16px
  line-height: @height
  width: @height
  vertical-align: middle
  color: #fff

.control-item
  cursor: pointer
  text-align: center
  overflow: hidden
  font-size: 12px
  display: inline-block
  width: (100 / 3)%
  height: panelHeight
  box-sizing: border-box
  position: relative
  .label
    position: absolute
    left: 0
    right: 0
    font-size: 10px
    box-sizing: border-box
    margin: 3px 4px 0
    height: labelHeight
    line-height: @height
    color: #999
  .number
    display: block
    font-size: 40px
    height: panelHeight
    line-height: @height
  .plus
    @extend $down-leaf
  .minus
    @extend $up-leaf
  .plus-sign
    @extend $sign-icon
    bottom: 5px
    left: 5px
  .minus-sign
    @extend $sign-icon
    line-height: 10px
    right: 5px
    top: 5px

.tempo .btn:hover
  background-color: rgba(colorBlue, 0.2)
.beats .btn:hover
  background-color: rgba(colorGreen, 0.2)
.subdivision .btn:hover
  background-color: rgba(colorYello, 0.2)
